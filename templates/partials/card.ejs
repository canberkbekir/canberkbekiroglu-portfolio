<%
  var isExternal = !!project.externalUrl;
  var linkURL = isExternal ? project.externalUrl : (root + '/portfolio/' + project.slug + '/');
  // Rewrite /static/ image paths to relative
  var imgSrc = project.image.replace(/^\/static\//, root + '/static/');
  var hoverSrc = project.hoverImage ? project.hoverImage.replace(/^\/static\//, root + '/static/') : '';
%>
<a href="<%= linkURL %>"<%= isExternal ? ' target="_blank" rel="noopener noreferrer"' : '' %> class="cover-card">
    <div class="cover-image">
        <img src="<%= imgSrc %>" alt="<%= project.title %>" loading="lazy" class="cover-img-static">
        <% if (project.hoverImage) { %>
        <img src="<%= hoverSrc %>" alt="<%= project.title %> preview" loading="lazy" class="cover-img-hover">
        <% } %>
        <div class="cover-tags">
            <% project.tags.forEach(function(tag) { %><span class="cover-tag<%= /nominee|award/i.test(tag) ? ' cover-tag--award' : '' %>"><%= tag %></span><% }); %>
        </div>
        <div class="cover-shine"></div>
        <div class="cover-body">
            <h3 class="cover-title"><%= project.title %></h3>
            <p class="cover-description"><%= project.description %></p>
            <% if (project.category) { %>
            <div class="cover-category">
                <svg class="cover-category-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="6" width="20" height="12" rx="2"/><line x1="6" y1="12" x2="10" y2="12"/><line x1="8" y1="10" x2="8" y2="14"/><circle cx="17" cy="10" r="1"/><circle cx="15" cy="13" r="1"/></svg>
                <span><%= project.category %></span>
                <% if (isExternal) { %>
                <svg class="cover-external-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
</a>

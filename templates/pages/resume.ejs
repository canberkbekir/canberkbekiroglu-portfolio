<script>
(function() {
    var sheet = document.getElementById('resume-content');
    if (!sheet) return;

    function paginate() {
        var wrapper = sheet.parentElement;

        // Remove any previously created overflow sheets
        wrapper.querySelectorAll('.resume-sheet-overflow').forEach(function(s) {
            while (s.firstChild) sheet.appendChild(s.firstChild);
            s.remove();
        });

        // A4 content height = 297mm - 14mm top - 14mm bottom = 269mm
        var sheetWidth = sheet.offsetWidth;
        var mmToPx = sheetWidth / 210;
        var pageContentHeight = 269 * mmToPx;

        var blocks = Array.prototype.slice.call(sheet.querySelectorAll(':scope > .resume-block'));
        if (!blocks.length) return;

        var currentSheet = sheet;
        var usedHeight = 0;

        blocks.forEach(function(block) {
            var blockHeight = block.offsetHeight;
            var blockMargin = parseInt(getComputedStyle(block).marginBottom) || 0;
            var totalBlockHeight = blockHeight + blockMargin;

            if (usedHeight > 0 && usedHeight + blockHeight > pageContentHeight) {
                var newSheet = document.createElement('div');
                newSheet.className = 'resume-sheet resume-sheet-overflow';
                wrapper.appendChild(newSheet);
                currentSheet = newSheet;
                usedHeight = 0;
            }

            currentSheet.appendChild(block);
            usedHeight += totalBlockHeight;
        });
    }

    if (document.fonts && document.fonts.ready) {
        document.fonts.ready.then(paginate);
    } else {
        window.addEventListener('load', paginate);
    }
    window.addEventListener('resize', paginate);
})();
</script>
